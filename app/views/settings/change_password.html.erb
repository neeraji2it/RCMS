<div id="well">
  <%= form_for @user,:url => update_password_setting_path(:role => @user.role,:id => @user.id) do |f| %>
    <table>
      <tr>
        <td>Current Password</td>
        <td><%= f.password_field :current_password %></td>
        <td><%= validation_error(@user.errors['current_password']) %></td>
      </tr>
      <tr>
        <td>New Password:</td>
        <td><%= f.password_field :password %></td>
        <td><%= validation_error(@user.errors['password']) %></td>
      </tr>
      <tr>
        <td>Confirm Password:</td>
        <td><%= f.password_field :password_confirmation %></td>
        <td><%= validation_error(@user.errors['password_confirmation']) %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit 'Change',:class => 'btn btn-primary' %></td>
        <td></td>
      </tr>

    </table>
  <% end %>
</div>

<script>
  $('#date_select').datepicker({
    dateFormat: 'dd-mm-yy',
    changeMonth: true,
    changeYear: true,
    yearRange: "c-0:c+10"
  });
</script>