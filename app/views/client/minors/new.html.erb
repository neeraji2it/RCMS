<%= form_for @minor,:url => client_minors_path(@minor) do |f| %>
  <%= f.hidden_field :intake_type,:value => @intake_type %>
  <ul class="list-steps">
    <li class="step-1 active">
      <span>1</span>
      <p>COUNSELING INFORMATION</p>
    </li>
    <li class="step-2">
      <span>2</span>
      <p>MEDICAL INFORMATION</p>
    </li>
    <li class="step-3">
      <span>3</span>
      <p>PERSONAL BACKGROUND</p>
    </li>
  </ul>
  <h1 class="icon-no1">PARENT / GUARDIAN INFORMATION</h1>
  <div class="boxGray">
    <% if f.error_messages.blank? == false %>
      <div id="errorExplanation" class="errorExplanation">
        <ul><li>Please enter required(*) fields</li></ul>
      </div>
    <% end %>
    <div class="staffrow">
      <div>MARITAL STATUS<em>*</em></div>
      <div>
        <%= f.radio_button :marital_status, "engaged", :id=>"checkbox_box_1" %>	<label for="checkbox_box_1" class="cssLabel"><span></span>Engaged</label>
        <%= f.radio_button :marital_status, "single", :id=>"checkbox_box_1" %>	<label for="checkbox_box_1" class="cssLabel"><span></span>Single</label>
        <%= f.radio_button :marital_status, "married", :id=>"checkbox_box_2" %><label for="checkbox_box_2" class="cssLabel"><span></span>MARRIED</label>
        <%= f.radio_button :marital_status, "saperated", :id=>"checkbox_box_3" %><label for="checkbox_box_3" class="cssLabel"><span></span>SEPARATED</label>
        <%= f.radio_button :marital_status, "widowed", :id=>"checkbox_box_4" %><label for="checkbox_box_4" class="cssLabel"><span></span>Widowed</label>
        <%= f.radio_button :marital_status, "divorced", :id=>"checkbox_box_1" %>	<label for="checkbox_box_1" class="cssLabel"><span></span>Divorced</label>
      </div>				
    </div>
    <div class="staffrow">
      <div>DATE OF MARRIAGE OR SEPARATION<em>*</em></div>
      <div>
        <%= f.date_select :date_of_marriage, {:include_blank => true, :default => nil,:start_year => 1930} %>
      </div>			
    </div>
    <div class="staffrow">
      <div>NUMBER OF MARRIAGES<em>*</em></div>
      <div>
        <%= f.text_field :no_of_marriages ,:class=>"input-noMarriages"%>	
        <hr />
      </div>			
    </div>
    <div class="staffrow">
      <div>CHILDREN</div>
      <div>
        <ul class="list-children" style="width:660px;">
          <%= f.fields_for :childrens do |b| %>
            <li>
              CHILD <%= b.text_field :child_name,:class => "input-child" %>
              <%= b.radio_button :gender,'male' %><label for="checkbox_box_5" class="cssLabel"><span></span>MALE</label>
              <%= b.radio_button :gender,'female' %><label for="checkbox_box_6" class="cssLabel"><span></span>FEMALE</label>
              &nbsp;&nbsp;DOB 
              <%= b.date_select :date_of_birth, {:include_blank => true, :default => nil,:start_year => 1930} %>
            </li>
          <% end %>
        </ul>
        <div>
          <%= link_to_add_fields "Plus", f, :childrens  %>
        </div>
        <hr />
      </div>
    </div>
    <h4>OTHER CUSTODIAL GUARDIAN</h4>	
    <div class="staffrow">
      <div>NAME:</div>
      <div>
        <%= f.text_field :guardian_name%>
      </div>
    </div>
    <div class="staffrow">
      <div>ADDRESS:</div>
      <div>
        <p><%= f.text_field :guardian_address %></p>
        <p><%= f.text_field :guardian_text %></p>
        <%= f.text_field :g_city ,:class=>"input-name"%>
        <%= f.text_field :g_state ,:class=>"input-midname"%>
        <%= f.text_field :g_zip ,:class=>"input-name"%>
        <hr />
      </div>				
    </div>
    <div class="staffrow">
      <div>CONTACT:</div>
      <div>
        <h5>DO YOU HAVE CONSENT FROM THE OTHER CUSTODIAL PARENT FOR TREATMENT OF SAID CHILD? <br /> <em>If no, this will be required by the therapist before counseling may begin.</em></h5>
        <%= f.radio_button :consent_from_other_parent,"yes",:id => "checkbox_box_13"%><label for="checkbox_box_13" class="cssLabel"><span></span>YES</label>
        <%= f.radio_button :consent_from_other_parent,"no",:id => "checkbox_box_14"%><label for="checkbox_box_14" class="cssLabel"><span></span>NO</label>
      </div>
    </div>
    <hr />
    <div class="staffrow">
      <div>How much contact does the child have with his/her biological mother/father?</div>
      <div><%= f.text_area :how_much_contact_child_have,:rows => 4,:maxlength=>"350" %></div>
    </div>	
    <hr />
    <div class="clearFix"></div>
  </div>
  <div class="heading-complete">COMPLETE ALL REMAINING INFORMATION ACCORDING TO THE CHILD COMING FOR TREATMENT.</div>
