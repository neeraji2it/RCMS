<div class="graybg">
  <h1>Staff Management</h1>
  <div class="tableBox table-listStaff">
    <div class="tablerow">
      <div class="column">Staff Id</div>
      <div class="column">Staff Name</div>
      <div class="column">Email Id</div>
      <div class="column">Phone No.</div>
      <div class="column">Actions</div>
    </div>

    <% @users.each do |user| %>
      <div class="tablerow" id="user_<%= user.id %>">
        <div class="column"><%= user.id %></div>
        <div class="column"><%= user.full_name %></div>
        <div class="column"><%= user.email %></div>
        <div class="column"><%= number_to_phone(user.mobile) %></div>
        <div class="column">
          <%= link_to "Edit", edit_admin_user_path(user), :class => "btn-green", :type => "submit" %>
          <%= link_to "Delete", admin_user_path(user), :method => 'DELETE', :confirm => "Are you sure", :remote => true, :class => "btn-delete" %>
        </div>
      </div>
    <% end %>
  </div>
</div>