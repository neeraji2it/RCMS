<% if !@room.new_record? %>
  $('#rooms').html("<%= escape_javascript(render(:partial => 'rooms', :locals => {:rooms => @rooms})) %> ");
  $("input[type='text']").val('');
  $(".field_with_errors input").css('border','1px solid #CCCCCC');
  $("#error_explanation").hide();
<% else %>
  $("#rooms_form").html("<%= escape_javascript(render(:partial => 'form')) %>")
<% end %>